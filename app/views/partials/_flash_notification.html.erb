<% if not flash.empty? %>
    <% flash.each do |type, msg| %>
        <script type="text/javascript">
          var duration = parseInt('<%= msg.length %>');
          duration = (duration >= 100) ? 6000 : 4000;
          noty({
            theme: 'bootstrapTheme',
            type: '<%= type %>',
            text: '<%= msg %>',
            layout: 'topRight',
            timeout: duration,
            force: true,
            closeWith: ['click', 'button']
          });
        </script>
    <% end %>
<% end %>
